<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F9F9F9</item>
        <item name="colorPrimaryDark">#D8D8D8</item>
        <item name="colorSecondary">#D8A544</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="KaiTiRadioButStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@drawable/radio_button_text_check</item>
        <item name="android:textSize">@dimen/dimen_text_size_28</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="XingTiRadioButStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@drawable/radio_button_text_check</item>
        <item name="android:textSize">@dimen/dimen_text_size_28</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TianziRadioButStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:button">@drawable/tianzi_radio_button_style</item>
        <item name="android:textSize">@dimen/dimen_text_size_12</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="TiaoxingRadioButStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:button">@drawable/tiaoxing_radio_button_style</item>
        <item name="android:textSize">@dimen/dimen_text_size_12</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="PromptTextStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/dimen_text_size_18</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="PromptTextStyle2">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimen_text_size_16</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="TitleTextStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dimen_text_size_22</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="ItemTitleTextStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimen_text_size_16</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="SaveButton" parent="@android:style/Widget.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:colorButtonNormal">@android:color/secondary_text_light</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
    <style name="SelButton" parent="@android:style/Widget.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:colorButtonNormal">@android:color/secondary_text_light</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:background">@drawable/imageview_shape</item>
    </style>
    <style name="CancelButton" parent="@android:style/Widget.Button">
        <item name="android:background">@color/cancel_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
    <style name="InputTextStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/input_edit_text</item>
        <item name="android:textSize">@dimen/dimen_text_size_18</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="translucent">
        <item name="android:windowBackground">#80000000</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
</resources>
